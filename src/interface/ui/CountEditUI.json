{
  "ui_id": "CountEditUI",
  "name": "카운트 수정 및 수동 변경 폼",
  "description": "특정 카운트 소스의 현재 값을 확인하고, 버튼을 통한 증감(+1, -1) 또는 직접 입력을 통해 값을 수동으로 업데이트하는 UI. 카운트 관리 목록(CountManagementUI)의 각 행에서 편집 모드로 전환 시 사용됨.",
  "layout": "table-row",
  "components": [
    {
      "id": "count-row-{source_id}",
      "type": "Row",
      "description": "수정 대상 카운트의 데이터를 포함하는 테이블 행 컨테이너",
      "children": [
        {
          "id": "source-id-column",
          "type": "Cell",
          "content": "{source_id}",
          "style": "font-weight: bold; width: 20%;"
        },
        {
          "id": "value-control-column",
          "type": "Cell",
          "layout": "horizontal",
          "style": "width: 30%;",
          "children": [
            {
              "id": "current-value-display",
              "type": "Text",
              "content": "{current_value}",
              "style": "font-size: 1.2em; margin-right: 15px;"
            },
            {
              "id": "increment-decrement-group",
              "type": "ButtonGroup",
              "children": [
                {
                  "id": "btn-decrement",
                  "type": "Button",
                  "label": "-1",
                  "htmx_spec": {
                    "hx_post": "/ui/counts/{source_id}/decrement",
                    "hx_trigger": "click",
                    "hx_target": "#count-row-{source_id}",
                    "hx_swap": "outerHTML",
                    "hx_indicator": "#indicator-{source_id}"
                  }
                },
                {
                  "id": "btn-increment",
                  "type": "Button",
                  "label": "+1",
                  "htmx_spec": {
                    "hx_post": "/ui/counts/{source_id}/increment",
                    "hx_trigger": "click",
                    "hx_target": "#count-row-{source_id}",
                    "hx_swap": "outerHTML",
                    "hx_indicator": "#indicator-{source_id}"
                  }
                }
              ]
            }
          ]
        },
        {
          "id": "manual-input-column",
          "type": "Cell",
          "style": "width: 30%;",
          "children": [
            {
              "id": "form-manual-value",
              "type": "Form",
              "layout": "horizontal",
              "htmx_spec": {
                "hx_put": "/ui/counts/{source_id}",
                "hx_trigger": "submit",
                "hx_target": "#count-row-{source_id}",
                "hx_swap": "outerHTML",
                "hx_indicator": "#indicator-{source_id}"
              },
              "children": [
                {
                  "id": "input-count-value",
                  "type": "Input",
                  "name": "value",
                  "inputType": "number",
                  "placeholder": "값 직접 입력",
                  "required": true,
                  "style": "width: 100px; margin-right: 10px;"
                },
                {
                  "id": "btn-update",
                  "type": "Button",
                  "label": "업데이트",
                  "action": "submit",
                  "variant": "primary"
                }
              ]
            }
          ]
        },
        {
          "id": "action-column",
          "type": "Cell",
          "style": "width: 20%;",
          "children": [
            {
              "id": "btn-cancel",
              "type": "Button",
              "label": "취소",
              "variant": "secondary",
              "htmx_spec": {
                "hx_get": "/ui/counts/{source_id}",
                "hx_trigger": "click",
                "hx_target": "#count-row-{source_id}",
                "hx_swap": "outerHTML"
              }
            },
            {
              "id": "indicator-{source_id}",
              "type": "Spinner",
              "style": "display: none; margin-left: 10px;",
              "content": "..."
            }
          ]
        }
      ],
      "htmx_spec": {
        "hx_on_error": "alert('요청을 처리할 수 없습니다. 다시 시도해주세요.')"
      }
    }
  ]
}
